<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="OnlineCourseApp.EditCourseContentWindow"
        Title="Редагування змісту курсу" Height="500" Width="600"
        WindowStartupLocation="CenterOwner" Background="#FAFAFA">
    <Grid Margin="0,0,0,-6">
        <DataGrid x:Name="CoursesPoints" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Назва пункту" Binding="{Binding Point}" Width="*"/>
                <DataGridTextColumn Header="Лайки" Binding="{Binding Likes}" Width="80"/>
                <DataGridTextColumn Header="Дизлайки" Binding="{Binding Dislikes}" Width="80"/>
                <DataGridTextColumn Header="Вид" Binding="{Binding Type}" Width="160"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 10">
            <Button Content="Додати лекцію" Margin="5" Click="AddLecture_Click"/>
            <Button Content="Додати практичне завдання" Margin="5" Click="AddPractice_Click"/>
            <Button Content="Редагувати зміст" Margin="5" Click="EditInfo_Click"/>
            <Button Content="Видалити пункт" Margin="5" Click="DeletePoint_Click"/>
        </StackPanel>
        <Label Content=" 1   Вступ                                                                               14                    3             Лекція" Margin="0,25,0,438"/>
        <Label Content=" 2   2 пункт                                                                            14                    3             Лекція" Margin="0,52,0,411"/>
        <Label Content=" 3   Кінцеве завдання                                                           14                    3             Практичне завдання" Margin="0,79,0,384"/>
    </Grid>
</Window>

