<Window x:Class="OnlineCourseApp.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Профіль користувача" Height="400" Width="500"
        WindowStartupLocation="CenterOwner" Background="#FAFAFA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Мій профіль" FontSize="24" FontWeight="Bold" Margin="0 0 0 20"/>

        <!-- Інформація -->
        <StackPanel Grid.Row="1" Margin="0 0 0 20">
            <TextBlock Text="Ім’я: Іван" FontSize="16" Margin="0 5"/>
            <TextBlock Text="Прізвище: Іваненко" FontSize="16" Margin="0 5"/>
            <TextBlock Text="Email: ivan.potuznyi@example.com" FontSize="16" Margin="0 5"/>
            <TextBlock Text="Дата народження: 01.01.2000" FontSize="16" Margin="0 5"/>
            <TextBlock Text="Роль: Зареєстрований користувач" FontSize="16" Margin="0 5"/>
        </StackPanel>

        <!-- Кнопка -->
        <Button Grid.Row="1" Content="Редагувати профіль" Height="35" Width="180"
                HorizontalAlignment="Left"
                Background="#3498DB" Foreground="White" FontWeight="Bold"
                Click="EditProfile_Click" Margin="0,257,0,0" Grid.RowSpan="2" VerticalAlignment="Top"/>
    </Grid>
</Window>

