<Window x:Class="OnlineCourseApp.ReasonDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вкажіть причину" Height="210" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <StackPanel Margin="20">
        <TextBlock Text="Причина дії:" Margin="0 0 0 10"/>
        <TextBox x:Name="ReasonTextBox" Height="60" TextWrapping="Wrap"/>
        <Button Content="Підтвердити" Margin="0 15 0 0" Height="35"
                Click="Confirm_Click" Background="#3498DB" Foreground="White"/>
    </StackPanel>
</Window>

