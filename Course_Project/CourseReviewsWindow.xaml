<Window x:Class="OnlineCourseApp.CourseReviewsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Відгуки курсу" Height="500" Width="600"
        WindowStartupLocation="CenterOwner" Background="#FAFAFA">

    <DockPanel Margin="10">
        <TextBlock Text="Відгуки користувачів:" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>
        <ListBox x:Name="ReviewsList">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="0 0 0 10">
                        <StackPanel>
                            <TextBlock Text="{Binding UserEmail}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Date}" FontStyle="Italic"/>
                            <TextBlock Text="{Binding ReviewText}" TextWrapping="Wrap" Margin="0 5 0 0"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Закрити" DockPanel.Dock="Bottom" Height="40" Width="120" HorizontalAlignment="Right" Click="Close_Click"/>
    </DockPanel>
</Window>

