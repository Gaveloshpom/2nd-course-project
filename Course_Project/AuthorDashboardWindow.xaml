<Window x:Class="OnlineCourseApp.AuthorDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель автора курсу" Height="500" Width="800"
        WindowStartupLocation="CenterScreen" Background="#FAFAFA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Хедер -->
        <Border Background="#2C3E50" Grid.Row="0">
            <DockPanel VerticalAlignment="Center" Margin="10">
                <TextBlock Text="Панель автора" FontSize="20" FontWeight="Bold" Foreground="White"/>
            </DockPanel>
        </Border>

        <!-- Контент -->
        <StackPanel Grid.Row="1" Margin="30">
            <Button Content="Мої курси" Width="200" Height="40" Margin="0 10"
                    Click="OpenMyCourses_Click" Background="#3498DB" Foreground="White"/>
            <Button Content="Створити новий курс" Width="200" Height="40" Margin="0 10"
                    Click="CreateCourse_Click" Background="#27AE60" Foreground="White"/>
        </StackPanel>
        <Border BorderBrush="Black" BorderThickness="1"/>
    </Grid>
</Window>
