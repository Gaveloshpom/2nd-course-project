<Window x:Class="OnlineCourseApp.CourseViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Перегляд курсу" Height="400" Width="600"
        WindowStartupLocation="CenterOwner" Background="#FAFAFA">

    <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock x:Name="CourseTitle" FontSize="24" FontWeight="Bold" Margin="0 0 0 20"/>
        <TextBlock x:Name="ProgressText" FontSize="16" Margin="0 0 0 20"/>

        <Button x:Name="StartButton" Content="Розпочати курс" Width="200" Height="50"
                Background="#3498DB" Foreground="White" FontWeight="Bold"
                Click="StartButton_Click"/>
    </StackPanel>
</Window>
