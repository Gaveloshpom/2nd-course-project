<Window x:Class="OnlineCourseApp.CreateCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Створення курсу" Height="350" Width="400"
        WindowStartupLocation="CenterOwner" Background="#FAFAFA">

    <StackPanel Margin="20">
        <TextBlock Text="Назва курсу*(1-30 символів):"/>
        <TextBox x:Name="CourseTitleBox" Height="30" Margin="0 0 0 15"/>

        <TextBlock Text="Опис курсу*(5-200 символів):"/>
        <TextBox x:Name="CourseDescriptionBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0 0 0 15"/>

        <Button Content="Створити" Height="35" Background="#3498DB" Foreground="White"
                Click="Create_Click"/>
    </StackPanel>
</Window>

