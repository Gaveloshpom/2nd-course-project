<Window x:Class="OnlineCourseApp.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагування профілю" Height="400" Width="400"
        WindowStartupLocation="CenterOwner" Background="#FAFAFA">

    <StackPanel Margin="20">
        <TextBlock Text="Ім'я" />
        <TextBox x:Name="NameBox" Height="30" Margin="0 0 0 15"/>

        <TextBlock Text="Прізвище" />
        <TextBox x:Name="SurnameBox" Height="30" Margin="0 0 0 15"/>

        <Button Content="Зберегти зміни" Click="SaveChanges_Click" Background="#3498DB" Foreground="White"/>
    </StackPanel>
</Window>
