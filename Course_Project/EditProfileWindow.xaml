<Window x:Class="OnlineCourseApp.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагування профілю" Height="300" Width="400"
        WindowStartupLocation="CenterOwner" Background="#FAFAFA">

    <StackPanel Margin="20">
        <TextBlock Text="Ім'я:"/>
        <TextBox x:Name="NameBox" Height="30" Margin="0 0 0 10"/>

        <TextBlock Text="Прізвище:"/>
        <TextBox x:Name="SurnameBox" Height="30" Margin="0 0 0 10"/>

        <TextBlock Text="Email:"/>
        <TextBox x:Name="EmailBox" Height="30" Margin="0 0 0 10"/>

        <Button Content="Зберегти зміни" Height="40" Background="#27AE60" Foreground="White"
                Click="Save_Click"/>
    </StackPanel>
</Window>

