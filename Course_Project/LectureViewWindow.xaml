<Window x:Class="OnlineCourseApp.LectureViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лекція" Height="500" Width="700"
        WindowStartupLocation="CenterOwner" Background="#FAFAFA">

    <DockPanel Margin="20">
        <!-- Лекція -->
        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Вступ до C#" FontSize="22" FontWeight="Bold" Margin="0 0 0 10"/>
                <TextBlock Text="C# (вимовляється Сі-шарп) — об'єктно-орієнтована мова програмування з безпечною системою типізації для платформи .NET. Розроблена Андерсом Гейлсбергом, Скотом Вілтамутом та Пітером Гольде під егідою Microsoft Research (належить Microsoft)." TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Управління -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 10">
            <Button Content="👍" Width="40" Margin="5" Click="Like_Click"/>
            <Button Content="👎" Width="40" Margin="5" Click="Dislike_Click"/>
            <Button Content="Далі →" Width="100" Margin="20 5 0 5" Click="Next_Click"
                    Background="#3498DB" Foreground="White"/>
        </StackPanel>
    </DockPanel>
</Window>
