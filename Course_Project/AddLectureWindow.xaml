<Window x:Class="OnlineCourseApp.AddLectureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Наповнення лекції" Height="400" Width="600"
        WindowStartupLocation="CenterOwner" Background="#FAFAFA">

    <StackPanel Margin="20">
        <TextBlock Text="Заголовок пункту:" FontWeight="Bold"/>
        <TextBox x:Name="TitleBox" Height="30" Margin="0 0 0 15"/>

        <TextBlock Text="Текст лекції:" FontWeight="Bold"/>
        <TextBox x:Name="ContentBox" AcceptsReturn="True" TextWrapping="Wrap" Height="200" Margin="0 0 0 20"/>

        <Button Content="Зберегти" Width="100" Height="35" 
                HorizontalAlignment="Right"
                Background="#3498DB" Foreground="White" Click="Save_Click"/>
    </StackPanel>
</Window>
