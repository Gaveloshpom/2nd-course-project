<Window x:Class="OnlineCourseApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вхід / Реєстрація" Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FAFAFA">

    <Border Margin="20" Background="White" CornerRadius="10" Padding="20" BorderBrush="#DDD" BorderThickness="1" >
        <StackPanel Margin="20">
            <TextBlock Text="Логін"/>
            <TextBox Text="{Binding Username}" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>

            <Button Content="Увійти" Click="Login_Click" Margin="0,0,0,10"/>
            <Button Content="Реєстрація" Click="Register_Click"/>
        </StackPanel>
    </Border>
</Window>
