<Window x:Class="OnlineCourseApp.PracticalTaskViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Практичне завдання" Height="550" Width="700"
        WindowStartupLocation="CenterOwner" Background="#FAFAFA">

    <DockPanel Margin="20">
        <!-- Завдання -->
        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Завдання" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>
                <TextBlock Text="Знайдіть х:   х + 12 = 22" TextWrapping="Wrap" Margin="0 0 0 20"/>

                <TextBlock Text="Ваша відповідь:"/>
                <TextBox x:Name="AnswerBox" Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Управління -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 10">
            <Button Content="👍" Width="40" Margin="5" Click="Like_Click"/>
            <Button Content="👎" Width="40" Margin="5" Click="Dislike_Click"/>
            <Button Content="Перевірити" Width="100" Margin="20 5 0 5" Click="Check_Click"
                    Background="#3498DB" Foreground="White"/>
            <Button Content="Далі →" Width="100" Margin="20 5 0 5" Click="Next_Click"
                    Background="#3498DB" Foreground="White"/>
        </StackPanel>
    </DockPanel>
</Window>
