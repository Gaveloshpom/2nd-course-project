<Window x:Class="OnlineCourseApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Online Course Platform" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <!-- Головна сітка -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Навбар -->
            <ColumnDefinition Width="*"/>
            <!-- Контент -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Хедер -->
            <RowDefinition Height="*"/>
            <!-- Основна частина -->
        </Grid.RowDefinitions>

        <!-- Хедер -->
        <Border Grid.ColumnSpan="2" Grid.Row="0" Background="#ffffff" BorderBrush="#DDD" BorderThickness="0,0,0,1">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Назва платформи -->
                <TextBlock Text="OnlineCourseApp" FontWeight="Bold" FontSize="20" VerticalAlignment="Center"/>

                <!-- Кнопка "Увійти" справа -->
                <Button x:Name="LoginButton" Content="Увійти" Grid.Column="1" Padding="10 5" Margin="0 0 10 0"
                Background="#3498DB" Foreground="White" FontWeight="SemiBold"
                HorizontalAlignment="Right" VerticalAlignment="Center"
                Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Навігаційна панель -->
        <StackPanel Grid.Row="1" Grid.Column="0" Background="#2C3E50" Margin="20">
            <TextBlock Text="Головна" Foreground="White" Margin="0 10" FontSize="16"/>
            <TextBlock Text="Курси" Foreground="White" Margin="0 10" FontSize="16"/>
            <TextBlock Text="Мій Профіль" Foreground="White" Margin="0 10" FontSize="16"/>
            <TextBlock Text="Налаштування" Foreground="White" Margin="0 10" FontSize="16"/>
        </StackPanel>

        <!-- Контент -->
        <ScrollViewer Grid.Row="1" Grid.Column="1" Padding="20">
            <StackPanel>
                <TextBlock Text="Рекомендовані Курси" FontSize="22" FontWeight="Bold" Margin="0 0 0 20"/>

                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <!-- Мокапи курсів -->
                    <Border Background="White" Width="200" Height="150" Margin="10" Padding="10" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Курс C#" FontWeight="Bold"/>
                            <TextBlock Text="Автор: Іван" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="4.5 ★" Foreground="Orange" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" Width="200" Height="150" Margin="10" Padding="10" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="WPF для початківців" FontWeight="Bold"/>
                            <TextBlock Text="Автор: Оля" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="4.7 ★" Foreground="Orange" FontSize="12"/>
                        </StackPanel>
                    </Border>
                </ItemsControl>
                <TextBlock FontSize="22" FontWeight="Bold"><Run Language="uk-ua" Text="Інші"/><Run Text=" Курси"/></TextBlock>
                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <!-- Мокапи курсів -->
                    <Border Background="White" Width="200" Height="150" Margin="10" Padding="10" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Курс Python" FontWeight="Bold"/>
                            <TextBlock FontSize="12" Foreground="Gray"><Run Text="Автор: "/><Run Language="uk-ua" Text="Сергій"/></TextBlock>
                            <TextBlock Foreground="Orange" FontSize="12"><Run Text="4."/><Run Language="uk-ua" Text="9"/><Run Text=" ★"/></TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Background="White" Width="200" Height="150" Margin="10" Padding="10" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                        <StackPanel>
                            <TextBlock FontWeight="Bold"><Run Language="uk-ua" Text="Курс "/><Run Text="C++"/></TextBlock>
                            <TextBlock FontSize="12" Foreground="Gray"><Run Text="Автор: "/><Run Language="uk-ua" Text="Андрій"/></TextBlock>
                            <TextBlock Foreground="Orange" FontSize="12"><Run Text="4."/><Run Language="uk-ua" Text="4"/><Run Text=" ★"/></TextBlock>
                        </StackPanel>
                    </Border>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>